{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["es2015", "dom", "es2018.promise"],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "../module",
    "plugins": [
      {
        "transform": "@magic-works/ttypescript-browser-like-import-transformer",
        "after": true,
        "extName": true,
        "folderImport": true,
        "rules": {
          "/(.+)/g": false
        }
      }
  ]
  },
  "include": ["../src"],
  "exclude": ["../node_modules", "../test"]
}

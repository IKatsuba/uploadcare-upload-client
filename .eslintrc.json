{
  "extends": ["uploadcare"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {"node": true},
  "rules": {
    "max-len": ["error", {
      "code": 120,
      "comments": 120
    }],
    "max-nested-callbacks": ["error", 4],
    "max-statements": ["error", 15],
    "no-underscore-dangle": ["error", {"allowAfterThis": true}],
    "arrow-body-style": 0
  },
  "overrides": [
    {
      "files": ["*.spec.js", "*.spec.ts"],
      "env": {"node": true, "es6": true, "browser": true, "mocha": true, "jasmine": true, "jest": true}
    }
  ]
}
